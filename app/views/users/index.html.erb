<h1 class="text-center mt-4"> The Sages </h1>

<% @users.each do |user| %>
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          <%= link_to user.username, user %>
        </div>
        <div class="card-body">
          <p class="card-text"><%= gravatar_for(user, size: 80) %></p>
          <p class="card-text"><%= pluralize(user.articles.count, 'article') %></p>
          <div class="btn-group" role="group">
            <%= link_to "details", user_path(user), class: 'btn btn-outline-success' %>
            <%= link_to "edit", edit_user_path(user), class: 'btn btn-outline-info' %>
            <%= link_to "delete", user_path(user), class: 'btn btn-outline-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
        <div class="card-footer text-muted">
          Joined at <%= user.created_at %>
        </div>
      </div>
    </div>
  </div>
<% end %>
