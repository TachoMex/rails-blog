<% if @article.errors.any? %>
  <p>Invalid article:</p>
    <ul>
      <% @article.errors.full_messages.each do |er| %>
        <li> <%= er %> </li>
      <% end %>

    </ul>
  <% end %>
  <%= form_with(scope: :article, url: articles_path, local: true) do |f| %> <br/>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
 <% end %>
