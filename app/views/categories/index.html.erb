<h1 class="text-center mt-4"> Categories </h1>

<%= render 'common/paginator', list: @categories %>

<% @categories.each do |category| %>
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-body">
          <%= link_to category.name.titleize, category, class: '' %>
        </div>
        <div class="card-footer text-muted">
          Created at <%= category.created_at %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render 'common/paginator', list: @users %>

<%= link_to 'Create Category', new_category_path, class: 'btn btn-outline-info mb-3' %>
