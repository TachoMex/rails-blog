<%= render 'common/errors', obj: @category %>

<%= form_with(model: @category, local: true, class: 'shadow p-3 mb-3 bg-info rounded') do |f| %>
  <div class="form-group row">
    <%= f.label :category, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Something cool' %>
    </div>
  </div>

  <div class="form-group row col-10 justify-content-center">
    <%= f.submit value: button_label, class: 'btn btn-success btn-lg' %>
  </div>
<% end %>
